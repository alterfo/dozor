<h1>Listing codes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Dif</th>
    <th>Task</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @codes.each do |code| %>
  <tr>
    <td><%= code.name %></td>
    <td><%= code.dif %></td>
    <td><%= Task.find(code.task_id).name %></td>
    <td><%= link_to 'Show', code %></td>
    <td><%= link_to 'Edit', edit_code_path(code) %></td>
    <td><%= link_to 'Destroy', code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

