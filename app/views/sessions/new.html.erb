<% if flash[:alert] %>
	<p id="notice"><%= flash[:alert] %></p>
<% end %>

<%= form_tag do %>
	<fieldset>
		<legend>Войди!</legend>
		
		<div>
			<%= label_tag :login, 'Логин:' %>
			<%= text_field_tag :login, params[:login] %>
		</div>
		
		<div>
			<%= label_tag :password, 'Пароль: ' %>
			<%= password_field_tag :password, params[:password] %>
		</div>
		
		<div>
			<%= submit_tag "Войти" %>
		</div>
	</fieldset>
<% end %>
